---
import GitHub from "./icons/GitHub.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";

import { PROJECTS } from "../data/projects";
---

<section class="flex flex-col gap-y-16">
  {PROJECTS.map(({ title, description, github, link, topics, languages, image, disclaimer, role, company, period }) => (
    <article class="flex flex-col space-y-8 group md:flex-row md:space-x-8 md:space-y-0">

      {/* Imagen */}
      <div class="w-full md:w-1/2">
        <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
          <img 
            alt={title} 
            class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" 
            loading="lazy" 
            src={image} 
          />
        </div>
      </div>

      {/* Info */}
      <div class="w-full md:w-1/2 md:max-w-lg">
        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">{title}</h3>

        {/* Company / Role */}
        {company && <div class="text-sm text-gray-500">{company} {period ? `• ${period}` : ""}</div>}
        {role && <div class="text-sm text-gray-500">{role}</div>}

        {/* Disclaimer */}
        {disclaimer && <div class="mt-1 text-sm text-yellow-600">{disclaimer}</div>}

        {/* Topics */}
        <ul class="flex flex-row mt-2 mb-2 gap-x-2 flex-wrap">
          {topics.map(tag => (
            <li>
              <span class="flex gap-x-2 rounded-full text-xs bg-gray-700 text-white py-1 px-2">
                #{tag}
              </span>
            </li>
          ))}
        </ul>

        {/* Languages */}
        {languages && languages.length > 0 && (
          <div class="mt-2 text-sm text-gray-600 dark:text-gray-400">
            {languages.map(lang => (
              <span class="mr-3">
                <strong>{lang.name}</strong> {lang.percent}
              </span>
            ))}
          </div>
        )}

        {/* Descripción */}
        <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>

        {/* Links */}
        <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
      </div>
    </article>
  ))}
</section>
