---
const personalImageAlt = "Miguel Fernandez";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import MailIcon from "../components/icons/Mail.astro";
import SocialPill from "../components/SocialPill.astro";
import ContactPopup from "./ContactPopup.astro";

const { i18n } = Astro.props
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16 object-cover"
      src="https://avatars.githubusercontent.com/u/53372986?v=4"
      alt={personalImageAlt}
    />
    <a
      href="https://linkedin.com/in/miguel1990"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105">
      <Badge>{i18n.HERO.AVAILABLE_WORK}</Badge>
    </a>
  </div>

  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white">
    {i18n.HERO.GREETING} <span class="animate-wave inline-block origin-[70%_70%]">ðŸ‘‹</span>
  </h1>
  
  <h2 class="mt-2 text-2xl font-semibold text-transparent bg-clip-text bg-gradient-to-r from-yellow-500 to-amber-500 dark:from-yellow-300 dark:to-yellow-500">
    {i18n.HERO.ROLE}
  </h2>

  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300 text-pretty">
    {i18n.HERO.DESCRIPTION_1} <strong
      >{i18n.HERO.DESCRIPTION_STRONG}
    </strong>{i18n.HERO.DESCRIPTION_2}
  </p>

  <div class="mt-8">
    <p class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-3">{i18n.HERO.CTA}</p>
    <nav class="flex flex-wrap gap-4">
      <ContactPopup />
      <SocialPill href="mailto:migue900920@gmail.com">
        <MailIcon class="size-4" />
        Correo
      </SocialPill>
      <SocialPill href="https://www.linkedin.com/in/miguel1990/">
        <LinkedInIcon class="size-4" />
        LinkedIn
      </SocialPill>
    </nav>
  </div>
</div>

<style>
  @keyframes wave {
    0% { transform: rotate(0.0deg) }
    10% { transform: rotate(14.0deg) }  
    20% { transform: rotate(-8.0deg) }
    30% { transform: rotate(14.0deg) }
    40% { transform: rotate(-4.0deg) }
    50% { transform: rotate(10.0deg) }
    60% { transform: rotate(0.0deg) } 
    100% { transform: rotate(0.0deg) }
  }
  .animate-wave {
    animation: wave 2s infinite;
  }
</style>
