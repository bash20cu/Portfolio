---
import MidudevBadge from "../components/MidudevBadge.astro"
import ContactPopup from "./ContactPopup.astro"
import CVDownload from '../components/CVDownload.astro';
const currentYear = new Date().getFullYear()
---

<footer class="opacity-80 mt-16 mb-10 w-full mx-auto px-4 sm:px-6 lg:px-8">
  <div class="max-w-screen-xl mx-auto flex flex-col md:flex-row md:items-center md:justify-between gap-4 md:gap-0 py-4">

    <!-- Información de copyright -->
    <span class="text-sm text-center md:text-left text-zinc-800/90 dark:text-zinc-200/90">
      &copy; {currentYear} 
      <a href="https://github.com/bash20cu" class="hover:underline">Miguel A. Fernández</a>.
    </span>

    <!-- Badges y popup contacto -->
    <div class="flex items-center gap-4 justify-center md:justify-start">
      <MidudevBadge />
      <ContactPopup />
    </div>

    <!-- Enlaces internos -->
    <ul class="flex flex-wrap items-center justify-center md:justify-end gap-4 text-sm font-medium text-zinc-800/90 dark:text-white/90">
      <li>
        <a href="/#sobre-mi" class="hover:underline">Sobre mí</a>
      </li>
      <li>
        <a id="contacto" href="mailto:migue900920@gmail.com" class="hover:underline">Contacto</a>
      </li>
    </ul>



  </div>
</footer>
